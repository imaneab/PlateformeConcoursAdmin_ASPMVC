@model PlateformeConcours.ViewModel.ResultViewModel
@{
    ViewBag.Title = "Résultats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section style{
    <style>
        h4{
            background-color: #494e53;
            color: white;
            padding: 7px;
        }
        hr{
            padding:30px;
        }
    </style>
    
    }
<div style="background-color: #494e53;width: 100%;height: 84px;">

</div>
<div class="site-section bg-light" id="contact-section">
    <div class="container">
        <div>
            <h4 style="padding: 28px;">
                Les list <b>@(Model.Admis ? "d'admis" : "du présélectionne")</b> pour accéder  au @Model.Title
            </h4>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12">
                @if (Model.Parametre != null && Model.Parametre.Resultats)
                {
                <div class="row">
                    <div class="col-12 col-md-6 bg-white">
                        <div class="col-12">
                            <h4>Liste principal pour acceder au 3éme année </h4>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>CNE</th>
                                        <th>Nom complet</th>
                                        <th>Filière</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var et in Model.Etudiants3a)
                                    {
                                        if (et != null)
                                        {
                                            <tr style="">
                                                <td>@et.Cne</td>
                                                <td>@et.NomComplet</td>
                                                <td>@et.Filiere.Titre</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (Model.Admis) { 
                        <div class="col-12">
                            <hr />
                            <h4>Liste d'attend pour acceder au 3éme année</h4>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>CNE</th>
                                        <th>Nom complet</th>
                                        <th>Filière</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var et in Model.Etudiants3aAttend)
                                    {
                                        if (et != null)
                                        {
                                            <tr style="">
                                                <td>@et.Cne</td>
                                                <td>@et.NomComplet</td>
                                                <td>@et.Filiere.Titre</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        }
                    </div>
                    <div class="col-12 col-md-6  bg-white">
                        <div class="col-12">
                            <h4>Liste principal pour acceder au 4éme année</h4>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>CNE</th>
                                        <th>Nom complet</th>
                                        <th>Filière</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var et in Model.Etudiants4a)
                                    {
                                        if (et != null)
                                        {
                                            <tr style="">
                                                <td>@et.Cne</td>
                                                <td>@et.NomComplet</td>
                                                <td>@et.Filiere.Titre</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (Model.Admis)
                        {
                            <div class="col-12">
                                <hr />
                                <h4>Liste d'attend pour acceder au 4éme année</h4>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>CNE</th>
                                            <th>Nom complet</th>
                                            <th>Filière</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var et in Model.Etudiants4aAttend)
                                        {
                                            if (et != null)
                                            {
                                                <tr style="">
                                                    <td>@et.Cne</td>
                                                    <td>@et.NomComplet</td>
                                                    <td>@et.Filiere.Titre</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
                }
                else
                {
                    <h4>
                        Il n'y a pas encore de résultats.
                    </h4>
                }
            </div>
        </div>
    </div>
</div>
