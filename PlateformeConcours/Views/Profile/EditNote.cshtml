@model PlateformeConcours.Models.Note

@{
    ViewBag.Title = "EditNote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid"
     style="background:darkslateblue;">
    <div class="row">
        <div class="col">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
            <div class="container bg-secondary text-light rounded"
                 style="background:darkslateblue;margin-top:5rem;"
                 data-stellar-background-ratio="0.5">
                <div class="btn btn-light m-2">
                    @Html.ActionLink("Profile", "Index")
                </div>
                <div class="btn btn-light m-2">
                    @Html.ActionLink("paramétres des notes", "EditNote")
                </div>
                <div class="btn btn-light m-2">
                    @Html.ActionLink("paramétre des infos Personelles", "Edit")
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-horizontal">
                            <h4>Note</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.EtudiantNoteId)

                            <div class="container">
                                <div class="row">
                                    <div class="col">
                                        @if (ViewBag.error != null)
                                        {
                                            if (ViewBag.error = true)
                                            {
                                                <div class="alert alert-danger" role="alert">
                                                    <p>
                                                        @Html.ValidationMessageFor(model => model.S1, "", new { @class = "text-primary" })
                                                    </p>
                                                    <p>
                                                        @Html.ValidationMessageFor(model => model.S2, "", new { @class = "text-primary" })
                                                    </p>
                                                    <p>
                                                        @Html.ValidationMessageFor(model => model.S3, "", new { @class = "text-primary" })
                                                    </p>
                                                    <p>
                                                        @Html.ValidationMessageFor(model => model.S4, "", new { @class = "text-primary" })
                                                    </p>
                                                    <p>
                                                        @Html.ValidationMessageFor(model => model.S5, "", new { @class = "text-primary" })
                                                    </p>
                                                    <p>
                                                        @Html.ValidationMessageFor(model => model.S6, "", new { @class = "text-primary" })
                                                    </p>
                                                </div> 
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6 m-auto">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.NoteBac, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.NoteBac, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.S1, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.S1, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.S2, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.S2, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.S3, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.S3, new { htmlAttributes = new { @class = "form-control", type = "number", placeholder = "Note S3" } })
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.S4, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.S4, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @if (Model.S5 != null)
                                {
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.S5, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.S5, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.S6, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.S6, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="row">
                                    <div class="col">
                                        <div class="col-md-12 m-auto">
                                            <p>
                                                Redoublant en 1ére année?:
                                            </p>
                                            <label class="radio-inline">
                                                Oui @Html.RadioButtonFor(model => model.Redoublant1, true)
                                            </label>
                                            <label class="radio-inline">
                                                Non @Html.RadioButtonFor(model => model.Redoublant1, false)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="col-md-12 m-auto">
                                            <p>
                                                Redoublant en 2éme année?:
                                            </p>
                                            <label class="radio-inline">
                                                Oui @Html.RadioButtonFor(model => model.Redoublant2, true)
                                            </label>
                                            <label class="radio-inline">
                                                Non @Html.RadioButtonFor(model => model.Redoublant2, false)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="col-md-12 m-auto">
                                            <p>
                                                Redoublant en 3éme année?:
                                            </p>
                                            <label class="radio-inline">
                                                Oui @Html.RadioButtonFor(model => model.Redoublant3, true)
                                            </label>
                                            <label class="radio-inline">
                                                Non @Html.RadioButtonFor(model => model.Redoublant3, false)
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-right">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-primary btn-pill" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            }

        </div>
    </div>

</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
