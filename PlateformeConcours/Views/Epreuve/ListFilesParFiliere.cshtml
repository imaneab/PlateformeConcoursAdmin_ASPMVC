@model IEnumerable<PlateformeConcours.Models.File>


@{
    ViewBag.Title = "Liste Epreuves";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="intro-section" id="home-section">
    <div class="slide-1"
         style="background-image: url('images/hero_1.jpg');"
         data-stellar-background-ratio="0.5">
        <div class="container-fluid">

            <div class="row align-items-center">
                <div class="col-12">
                    <div class="row  align-items-center justify-content-center m-5">
                        <div class="col-12 col-md-12 col-lg-12 ml-auto mt-5 " data-aos="fade-up" data-aos-delay="400">
                            <div class="form-box border border-dark">
                                <h3>Liste des anciens epreuves</h3>
                                <table class="table table-striped table-bordered ">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Id)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            <a>Lien de Téléchargement</a>
                                        </th>
                                        <th></th>
                                    </tr>


                                    @foreach (var i in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => i.Id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => i.Titre_concours)
                                            </td>
                                            <td>

                                                @Html.ActionLink(i.Name, "Get", "Home", new { Id = i.Id }, new { title = "Open PDF document" })


                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

